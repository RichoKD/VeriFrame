# FluxFrame Backend Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://fluxframe:password@localhost/fluxframe_db
REDIS_URL=redis://localhost:6379/0

# Starknet Configuration
STARKNET_RPC_URL=http://localhost:5050
JOB_REGISTRY_CONTRACT_ADDRESS=0x0315980c7693d042ed612f84cd513f1751688170cd29ed04f4eaa51ec1c26381
STARKNET_NETWORK=dev_net

# IPFS Configuration
IPFS_API_URL=http://127.0.0.1:5001
IPFS_GATEWAY_URL=http://127.0.0.1:8080

# Security
SECRET_KEY=your-secret-key-here-please-change-this
JWT_SECRET_KEY=your-jwt-secret-key-here-please-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Worker Configuration
EVENT_POLLING_INTERVAL=5
MAX_RETRIES=3
BATCH_SIZE=100

# API Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
